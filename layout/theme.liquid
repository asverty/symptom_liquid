<!DOCTYPE html>

<head>
  <title>{{ page_title }}</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, user-scalable=yes, initial-scale=1, maximum-scale=1">
  <meta name="HandheldFriendly" content="True">
  <meta name="MobileOptimized" content="320">
  <meta name="format-detection" content="telephone=no">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_img_url: '32x32' }}" type="image/ico">
  {{ 'fullpage.css' | asset_url | stylesheet_tag }}
  {{ 'theme.css' | asset_url | stylesheet_tag }}
  {{ content_for_header }}
</head>

<body>

  <!-- HEADER -->
  {% if template == 'index' %}
  {% section 'header' %}
  {% else %}
  {% section 'header-black' %}
  {% endif %}

  <!-- PAGE CONTENT -->
  <main>
    {{ content_for_layout }}
  </main>

  <!-- FOOTER -->
  {% section 'footer' %}

  <!-- COMMON SCRIPTS -->
  {{ 'common-header.js' | asset_url | script_tag }}
  {{ 'common-brands-menu.js' | asset_url | script_tag }}
  {{ 'common-categories-menu.js' | asset_url | script_tag }}
  {{ 'common-validation.js' | asset_url | script_tag }}
  {{ 'common-chatra.js' | asset_url | script_tag }}

  <!-- SCRIPTS FOR INDEX -->
  {% if template == 'index' %}
  {{ 'fullpage.js' | asset_url | script_tag }}
  {{ 'limited-index.js' | asset_url | script_tag }}
  {% endif %}

  <!-- SCRIPTS FOR COLLECTIONS -->
  {% if template == 'collection' %}
  {{ 'limited-collection.js' | asset_url | script_tag }}
  {% endif %}

  <!-- SCRIPTS FOR CART -->
  {% if template == 'cart' %}
  {{ 'limited-cart.js' | asset_url | script_tag }}
  {% endif %}

</body>

</html>