@font-face {
    font-family: "Nimbus Sans";
    src: url("../../vendor/fonts/Nimbus/NimbusSanL-Reg.ttf") format("truetype"),
    url("../../vendor/fonts/Nimbus/NimbusSanL-Reg.woff") format("woff"),
    url("../../vendor/fonts/Nimbus/NimbusSanL-Reg.woff2") format("woff2");
    font-weight: 400;
    font-style: normal;
  }

  * {
    margin: 0;
    padding: 0;
    font-family: "Nimbus Sans", Arial, sans-serif;
    font-style: normal;
    font-weight: 400;
  }

  html {
    font-size: 10px;
  }

  body {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: #FAFAFA;
  }



  /* ШАПКА */
  .header {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    padding-top: 20px;
    padding-left: 4vw;
    padding-right: 4vw;
    width: 92vw;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .header_hidden {
    display: none;
  }

  .logo {
    width: 105px;
    height: 31px;
    background-image: url(./images/logo-white.png);
    background-size: cover;
  }

  .menu-button {
    font-size: 1.8rem;
    line-height: 1.2;
    text-transform: uppercase;
    color:  #FAFAFA;
    background-color: transparent;
    border: none;
    outline: none;
  }



  /* МЕНЮ */
  .menu-popup {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 4;
    width: 100vw;
    height: 100vh;
    background-color: #FAFAFA;
  }

  .menu-popup_hidden {
    display: none;
  }

  .fake-header {
    padding-top: 20px;
    padding-bottom: 2vh;
    padding-left: 4vw;
    padding-right: 4vw;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .fake-logo {
    width: 105px;
    height: 31px;
    background-image: url(./images/logo-black.png);
    background-size: cover;
  }

  .menu-close-button {
    font-size: 1.8rem;
    line-height: 1.2;
    text-transform: uppercase;
    background-color: transparent;
    border: none;
    outline: none;
  }

  .menu {
    padding-top: 12px;
    padding-right: 4vw;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    text-align: right;
  }

  .menu-list {
    margin-top: 30px;
    margin-bottom: 20px;
    list-style: none;
  }

  .menu-list:first-of-type {
    margin-top: 0px;
  }

  .menu-list:last-of-type {
    margin-bottom: 0px;
  }

  .menu-list-element {
    margin-bottom: 10px;
  }

  .menu-list-element:last-of-type {
    margin-bottom: 0;
  }

  .menu-link {
    font-size: 3.6rem;
    line-height: 1.2;
    color: black;
    text-decoration: none;
    text-transform: uppercase;
  }

  @media
  screen and (max-width: 359px),
  screen and (max-height: 580px) {
    .menu-list {
      margin-bottom: 0;
    }

    .menu-list-element {
      margin-bottom: 4px;
    }

    .menu-link {
      font-size: 2.8rem;
    }
  }



  /* КУКИ */
  .cookies {
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 3;
    width: 100vw;
    height: 406px;
    display: flex;
    flex-direction: column;
    background-color: #0F0F0F;
  }

  .cookies_hidden {
    display: none;
  }

  .cookies-text {
    margin-top: 40px;
    margin-bottom: 40px;
    margin-left: 4vw;
    margin-right: 4vw;
    font-size: 1.4rem;
    line-height: 1.2;
    color: #FAFAFA;
  }

  .cookies-close-button {
    width: 48px;
    height: 48px;
    align-self: center;
    border: none;
    outline: none;
    background-color: transparent;
    background-image: url(./images/cookies-close-button.svg);
    background-position: center;
  }

  /* ОСНОВНОЙ РАЗДЕЛ */
  .main_hidden {
    display: none;
  }

  .section {
    background-position: top;
    background-size: cover;
  }

  .section_1 {
    background-image: url(./images/bg-section-1.jpg);
  }

  .section_2 {
    background-image: url(./images/bg-section-2.jpg);
  }

  .section_3 {
    background-image: url(./images/bg-section-3.jpg);
  }

  .section_4 {
    background-image: url(./images/bg-section-4.jpg);
  }

  .section-info {
    padding-left: 4vw;
    padding-right: 4vw;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .section-heading {
    margin-bottom: 10px;
    font-size: 6.8rem;
    line-height: 0.85;
    color:  #FAFAFA;
    text-transform: uppercase;
  }

  .section-text {
    margin-bottom: 3vh;
    font-size: 1rem;
    line-height: 1.2;
    color:  #FAFAFA;
  }

  .section-text_large {
    font-size: 1.4rem;
  }

  .section-text_margin-bottom {
    margin-bottom: 10vh;
  }

  @media screen and (max-width: 374px) {
    .section-heading {
      font-size: 4.4rem;
    }

    .section-text_large {
      font-size: 1.2rem;
    }

    .section-text_margin-bottom {
      margin-bottom: 5vh;
    }
  }



  /* СЧЁТЧИК */
  .counter {
    position: absolute;
    top: 14.5vh;
    left: 4vw;
    z-index: 1;
    font-size: 6.8rem;
    line-height: 1;
    color:  #FAFAFA;
  }

  .counter_hidden {
    display: none;
  }


  @media screen and (max-width: 374px) {
    .counter {
      font-size: 4.8rem;
    }
  }



  /* ПОДВАЛ */
  .footer {
    position: absolute;
    bottom: -100vh;
    left: 0;
    z-index: 2;
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: black;
    transition: bottom 0.3s ease-out;
    overflow: auto;
  }

  .footer_shown {
    bottom: 0;
    transition: bottom 0.3s ease-in;
  }

  .footer__contacts {
    margin-top: 20px;
    margin-bottom: 59px;
    margin-left: 4vw;
    margin-right: 4vw;
    display: flex;
    flex-direction: column;
  }

  .footer__contact {
    margin-bottom: 20px;
    display: flex;
    flex-direction: column;
  }

  .footer__contact:last-of-type {
    margin-bottom: 0;
  }

  .footer__contact-type {
    font-size: 1rem;
    line-height: 1.2;
    color:  #FAFAFA;
  }

  .footer__contact-data {
    width: min-content;
    font-size: 3.4rem;
    line-height: 1.2;
    color:  #FAFAFA;
    text-decoration: none;
  }

  .footer__navigation {
    margin-bottom: 59px;
    margin-left: 4vw;
    margin-right: 4vw;
    width: 92vw;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }

  .footer__nav-list {
    width: 30vw;
  }

  .footer__nav-list-element {
    margin-bottom: 20px;
  }

  .footer__nav-list-element:last-of-type {
    margin-bottom: 0;
  }

  .footer__nav-link {
    font-size: 1.2rem;
    line-height: 1.2;
    color:  #FAFAFA;
    text-decoration: none;
    text-transform: uppercase;
  }

  @media screen and (max-width: 359px) {
    .footer__contacts {
      margin-bottom: 40px;
    }

    .footer__contact-data {
      font-size: 2.6rem;
    }

    .footer__navigation {
      margin-bottom: 40px;
    }

    .footer__nav-link {
      font-size: 1rem;
    }
  }
