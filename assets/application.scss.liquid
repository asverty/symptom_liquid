display: flex;
flex-direction: row;
align-items: center;
}

.checkbox__true-checkbox {
position: absolute; 
opacity: 0;
}

.checkbox__fake-checkbox {
position: relative;
display: flex;
width: 25px;
height: 25px;
background-image: url(./images/checkbox-cirlce.svg);
background-position: center;
background-size: cover;
}

.checkbox__fake-checkbox:hover {
cursor: pointer;
}

.checkbox__fake-checkbox::before {
position: absolute;
display: flex;
content: "";
width: 25px;
height: 25px;
background-image: url(./images/checkbox-cross.svg);
background-position: center;
background-size: cover;
opacity: 0;
}

.checkbox__true-checkbox:checked + 
.checkbox__fake-checkbox::before {
opacity: 1;
}

.checkbox__description {
margin-left: 24px;
font-size: 14px;
}





