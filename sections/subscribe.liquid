<!-- FORM: SUBSCRIBE -->
<form class="form">
<h3 class="form__heading">Давайте познакомимся</h3>
<div class="form__grid">
    <div class="form__left-half">
    <h4 class="form__input-name">E-mail:</h4>
    <input class="form__input" placeholder="your@e-mail.com">
    <span class="form__error">Введите адрес электронной почты</span>
    <label class="form__checkbox-alignment">
        <div>
        <input class="form__true-checkbox" type="checkbox" checked>
        <div class="form__fake-checkbox"></div>
        </div>
        <p class="form__checkbox-description">I would like to receive information about new collections and<br>special
        offers by the specified email</p>
    </label>
    </div>
    <div class="form__right-half">
    <h4 class="form__input-name">Ваше имя:</h4>
    <input class="form__input" placeholder="Your pass">
    <span class="form__error">Укажите Ваше имя</span>
    <label class="form__checkbox-alignment">
        <div>
        <input class="form__true-checkbox" type="checkbox" checked>
        <div class="form__fake-checkbox"></div>
        </div>
        <p class="form__checkbox-description">By clicking the "Checkout" button you consent to the processing<br>of
        your
        personal data</p>
    </label>
    <button class="form__button form__button_submit">Подписаться</button>
    </div>
</div>
</form>